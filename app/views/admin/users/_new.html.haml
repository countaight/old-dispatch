= form_for :user, remote: true do |f|
	%div.form_field
		= f.label :name
		= f.text_field :name
	%div.form_field
		= f.label :email
		= f.text_field :email
	%div.form_field
		= f.label :password
		= f.password_field :password
	%div.form_field
		= f.label :password_confirmation
		= f.password_field :password_confirmation
	= f.submit